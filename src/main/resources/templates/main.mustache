     body {padding: 20px;}

     .header {
         width: 100%;
         background-color: #ffffff;
         border-top: 1px solid #000000;
         border-bottom: 1px solid #000000;
         box-sizing: border-box;
     }

    .main-container {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 40px;
      height: calc(100vh - 60px);
