     .header {
         position: fixed;
         top: 0;
         left: 0;
         width: 100vw;
         height: 100px;
         z-index: 1000;
         display: flex;
         flex-direction: column;
     }
     .top-header {
         width: 100%;
         height: 100px;
         background-color: #000000;
         color: white;
         /*border-bottom: 1px solid #ddd;*/
         padding: 20px;
     }

     .header-row {
         display: flex;
         justify-content: space-between;
         align-items: center;
         height: 60px;
         font-size: 16px;
         font-weight: 600;
         background-color: #ffffff;
         padding: 20px;
