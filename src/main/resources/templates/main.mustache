         display: block;
         margin-left: auto;
         margin-right: auto;

     }


    .right-section {
      min-width: 300px;
      background-color: #323232;
      color: #ffffff;
      padding: 32px 16px;

    }

     .card {
         /*border: 1px solid black;*/
         padding: 10px;
         margin-bottom: 5px;
     }

     .badge {
         display: inline-block;
         padding: 4px 10px;
         border-radius: 10px;
         color: white;
         font-weight: bold;
         font-size: 7px;
     }
     .green{background-color: green}
     .orange{background-color: darkorange}
     .yellow{background-color: yellow; color: black;}
     .red{background-color: red}
     .gray{background-color: gray}


    </style>
</head>
