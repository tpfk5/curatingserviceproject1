     html,body {
         font-family: 'Space Grotesk', sans-serif;
         margin: 0;
         height: 100%;
     }

     body {padding: 20px;}

     .header {
         width: 100%;
         background-color: #ffffff;
         border-top: 1px solid #000000;
         border-bottom: 1px solid #000000;
         box-sizing: border-box;
     }

<!--     .nav-links:hover {-->
<!--        opacity: 0.6;-->
<!--     }-->


    .main-container {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 40px;
      height: calc(100vh - 60px);
        box-sizing: border-box;
    }

    .left-section {
        min-width: 380px;
        background: #ffffff;
        /*padding: 32px 16px;*/
        color: #222;
    }

     .poster1, .poster2, .poster3, .poster4 {
         width: 200px;
         height: 200px;
         object-fit: contain;
         display: block;
         margin-left: auto;
         margin-right: auto;

     }

    .right-section {
      min-width: 300px;
      background-color: #323232;
      color: #ffffff;
      padding: 32px 16px;
    }

     .card {
         /*border: 1px solid black;*/
         padding: 10px;
         margin-bottom: 5px;
         position: relative;
         background: white;
     }

     .badge {
         display: inline-block;
         padding: 4px 10px;
         border-radius: 10px;
         color: white;
         font-weight: bold;
         font-size: 7px;
     }
     .green{background-color: green}
     .orange{background-color: darkorange}
     .yellow{background-color: yellow; color: black;}
     .red{background-color: red}
     .gray{background-color: gray}

    .view-btn {
        background: none;
        border: 1px solid #000;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.2s;
        text-transform: lowercase;
    }

    .view-btn:hover {
            background: #000;
            color: white;
        }

    .img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 1px solid #ddd;
        }

    .card-content {
            padding: 20px;
            background: white;
        }


    </style>
</head>
